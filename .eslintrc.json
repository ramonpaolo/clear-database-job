{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-undef": "error",
        "no-unused-vars": "error",
        "eqeqeq": "error",
        "curly": "error",
        "no-eval": "error",
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-var": "error",
        "prefer-const": "error",
        "max-len": [
            "error",
            {
                "code": 80
            }
        ],
        "complexity": [
            "error",
            {
                "max": 10
            }
        ],
        "no-magic-numbers": ["warn", { "ignore": [0, 1], "ignoreArrayIndexes": true, "enforceConst": true }],
        "no-use-before-define": [
            "error",
            {
                "functions": false,
                "classes": true
            }
        ]
    }
}